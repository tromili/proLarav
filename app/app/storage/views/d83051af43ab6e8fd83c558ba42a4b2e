<script type="text/javascript">
  var total=0;
  $('.totalC').each(function() {
    total+=parseFloat($(this).html());
  });
  $('.totales').html((total).toFixed(2));
  $('.eliminar').click(function(){
    var data={};
    data.ides=$(this).parent().parent().find('.lna').attr('id');
    var elimianr = $(this).parent().parent();
    $.ajax({
      type: 'POST',
      data:data,       
      url: '/productos/elrcs',         
      success: function(data) {
        $(elimianr).remove();
      }
    });
  });
  $('.addprod').click(function(event) {
    var data={};
    lnaS=$(this).parent().parent();
    data.recurso='<?php echo $registro->id; ?>';
    data.ides=$(lnaS).find('.recursos').val();
    data.cantidad=$(lnaS).find('.cantidad').val();
    $.ajax({
      type: 'POST',
      data:data,       
      url: '/productos/addprd',         
      success: function(data) {
        if(data>0){
          location.reload();
        }
      }
    });
  });
  //Add Etapas
  $('.addetp').click(function(event) {
    var data={};
    lnaS=$(this).parent().parent();
    data.recurso='<?php echo $registro->id; ?>';
    data.etapas=$(lnaS).find('.etapas').val();
    $.ajax({
      type: 'POST',
      data:data,       
      url: '/productos/addetp',         
      success: function(data) {
        if(data>0){
          location.reload();
        }
      }
    });
  });
  $('.eliminarEtp').click(function(){
    var data={};
    data.ides=$(this).parent().parent().find('.lna').attr('id');
    var elimianr = $(this).parent().parent();
    $.ajax({
      type: 'POST',
      data:data,       
      url: '/productos/elmetp',         
      success: function(data) {
        $(elimianr).remove();
      }
    });
  });
  /*color*/
  $(document).ready(function() {
      $(".mycolor").colorpicker();
  });
  //upload
  $('#sortpicture').on('change', function() {
    var file_data = $(this).prop('files')[0];   
    var form_data = new FormData();                  
    form_data.append('file', file_data)                           
    $.ajax({
                url: '../colorprod/<?php echo $registro->id; ?>',
                dataType: 'text',
                cache: false,
                contentType: false,
                processData: false,
                data: form_data,                         
                type: 'post',
                success: function(php_script_response){
                   /* alert(php_script_response);*/
                   location.reload(true);
                }
     });
});
</script>
